#include<stdio.h>
int main()
{
    int i,j,n1[3][4],n2[3][4];
    printf("Enter elements of 3X4 array n1\n");
    for(i=0;i<3;i++)
    for(j=0;j<4;j++)
    scanf("%d",&n1[i][j]);
    printf("Enter elements of 3X4 array n2");
    for(i=0;i<3;i++)
    for(j=0;j<4;j++)
    scanf("%d",&n2[i][j]);
    printf("The 3X4 array n1 is\n");
    for(i=0;i<3;i++)
    {
        for(j=0;j<4;j++)
        printf("%3d", n1[i][j]);
        printf("\n");
    }
    printf("The 3X4 array n2 is\n");
    for(i=0;i<3;i++)
    {
        for(j=0;j<4;j++)
        printf("%3d", n2[i][j]);
        printf("\n");
    }
    printf("Sum of n1 and n2 is \n");
    for(i=0;i<3;i++)
    {
        for(j=0;j<4;j++)
        printf("%3d", n1[i][j]+n2[i][j]);
        printf("\n");
    }
    return 0;
}
